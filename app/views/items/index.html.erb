<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Address</th>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.address %></td>
        <td><%= item.amount %></td>
        <td><%= item.user_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><% if policy(item).edit?%>
              <%= link_to 'Edit', edit_item_path(item) %>
            <%end%>
        </td>
        <td><% if policy(item).destroy?%>
              <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%end%>
        </td>



      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Item).create? %>
  <%= link_to "New Item", new_item_path %>
<% end %>
